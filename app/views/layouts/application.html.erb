<!DOCTYPE html>
<html>
  <head>
    <title>Gamery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div>
      Users:
      <ul>
        <% User.find_each do |user| %>
          <li data-controller="user"
              data-user-id-value="<%= user.id %>"
              data-user-online-class="has-text-success"
              data-user-target="indicator"
              class="<%= "has-text-success" if OnlinePresence.include?(user.id) %>"
          ><%= user.email %></li>
        <% end %>
      </ul>
    </div>

    <%= yield %>
  </body>
</html>
